<?xml version="1.0" encoding="utf-8"?>
<templates>
   <t t-name="button_sale.ListView.Buttons" t-inherit="web.ListView.Buttons">
       <xpath expr="//*[@class='btn btn-primary o_list_button_add']" position="after">
           <button type="button" class="btn btn-primary" style="margin-left: 10px;"  t-on-click="open_day">
               Open Day
           </button>
           <button type="button" class="btn btn-primary" style="margin-left: 10px;"  t-on-click="close_day">
               Close Day
           </button>
           <button type="button" class="btn btn-primary" style="margin-left: 10px;"  t-on-click="get_card_details">
               Card Details
           </button>
       </xpath>
   </t>
</templates>